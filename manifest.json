{
  "name": "RefinedQase",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "qase utility tools",
  "icons": {
    "16": "assets/icon16.png"
  },
  "browser_action": {
    "default_icon": "assets/icon16.png",
    "default_title": "RefinedQase"
  },
  "background": {
    "scripts": ["src/script.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://app.qase.io/plan/*/edit/*"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": ["tabs", "background", "http://*/*", "https://*/*"]
}
